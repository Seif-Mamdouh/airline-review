// input (populating the array)	

void Input_fun(int Ns[],const int &S)
{

	for(int i = 0; i< S; i++)
	   {
	   	cout<<" enter a value"<<endl;
	   	cin>>Ns[i];
	   	
	   }
}
// output (displaying the array members
void Output_fun(int Nss[],const int &SS)
{

	for(int i = 0; i< SS; i++)
	   {
	   	
	   	cout<<Nss[i]<<endl;
	   	
	   }	   
	   	
	
}



